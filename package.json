{
  "name": "fast-jest",
  "version": "0.0.0",
  "description": "Testing FAST components with Jest",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "author": "Doug @Relias",
  "license": "MIT",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "dependencies": {
    "@microsoft/fast-element": "^1.8.0",
    "@microsoft/fast-foundation": "^2.35.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing-helpers": "^2.1.2",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@web/dev-server": "^0.1.30",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "testing-library__dom": "^7.29.4-beta.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "testRegex": "(.(test|spec)).(ts|tsx)$",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(testing-library__dom|@open-wc|lit-html|lit-element|pure-lit|lit-element-state-decoupler)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/test-setup.ts"
    ]
  }
}
